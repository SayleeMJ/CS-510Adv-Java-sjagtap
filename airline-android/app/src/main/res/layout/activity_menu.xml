<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAddAirline"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:onClick="addAirline"
                android:text="Add Airline" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAddFlight"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:onClick="addFlight"
                android:text="Add Flight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btPrintPretty"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:onClick="prettyPrint"
                android:text="Pretty print" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btSearch"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:onClick="searchAirline"
                android:text="Search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btReadMe"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:onClick="readMe"
                android:text="Read Me" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btHelp"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:onClick="readMe"
                android:text="Help" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>